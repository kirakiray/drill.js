{
  "name": "drill.js",
  "version": "5.0.5",
  "description": "A declarative modular framework that runs on the browser",
  "main": "dist/drill.js",
  "exports": {
    "require": "./dist/drill.js",
    "import": "./src/dist.mjs"
  },
  "scripts": {
    "build": "rollup -c && npm run terser",
    "terser": "terser dist/drill.js -c -m -o dist/drill.min.js && terser dist/drill.mjs -c -m -o dist/drill.min.mjs",
    "static-server": "node scripts/static-server",
    "playwright": "npx playwright test",
    "test": "node scripts/ci-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirakiray/drill.js.git"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.3",
    "jasmine-core": "^4.6.0",
    "koa": "^2.14.1",
    "koa-static": "^5.0.0",
    "rollup": "^3.21.6",
    "shelljs": "^0.8.5",
    "terser": "^5.17.3"
  },
  "author": {
    "name": "YAO",
    "email": "kirayao@hotmail.com",
    "url": "https://kirakiray.com/"
  },
